{
  "name": "image-optimizer-devcontainer",
  "build": {
    "dockerfile": "Dockerfile"
  },
  "forwardPorts": [
    8080
  ],
  "appPort": [
    "8080:80"
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client", // PHP インテリセンス拡張
        "junstyle.php-cs-fixer", // フォーマッター拡張
        "mhutchie.git-graph",
        "seatonjiang.gitmoji-vscode"
      ]
    }
  },
  "postCreateCommand": "composer install"
}